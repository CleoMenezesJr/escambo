{
  "app-id": "io.github.cleomenezesjr.Escambo.Devel",
  "runtime": "org.gnome.Platform",
  "runtime-version": "master",
  "sdk": "org.gnome.Sdk",
  "command": "escambo",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "blueprint-compiler",
      "buildsystem": "meson",
      "cleanup": ["*"],
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
          "tag": "v0.10.0"
        }
      ]
    },
    {
      "name": "escambo",
      "builddir": true,
      "buildsystem": "meson",
      "config-opts": ["-Dprofile=development"],
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
